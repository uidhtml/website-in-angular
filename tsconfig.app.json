{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@app/*": ["./app/*"],
      "@adminCore/*": ["./app/admin/core/*"],
      "@frontendCore/*": ["./app/frontend/core/*"],
      "@common/*": ["./app/common/*"],
      "@assets/*": ["./assets/*"],
      "@services/*": ["./app/common/services/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
